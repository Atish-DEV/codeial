   <link rel="stylesheet" href="/css/home.css">
   <h1>It is the <%=title%></h1>
   <section>
      <%if (locals.user){%>
      <h4>Posts</h4>
      <form action="/post/create-post" method="POST">
         <textarea name="content" rows="5" cols="30" required>
         </textarea>
         <input type="submit" value="post">
      </form>
      <div id="post-container">
         <ul>
            <%for(post of posts){%>
               <li>
                  <p>
                     <%if (locals.user && locals.user.id==post.user.id){%>
                     <small>
                     <a href="/post/destroy/<%=post.id%>">X</a>
                  </small>
                     <%}%>
               </p>
                  <p><%=post.content%></p>
                  <p><small><%=post.user.name%></small></p>
                  <br/>
                  <div id="comment-container">
                     <%for(comment of post.comments){%>
                        <p><%=comment.content%></p>
                        <p><small><%=comment.user.name%></small></p>
                        <%}%>
                  </div>
                  <form action="/comment/create-comment" method="POST">
                     <input type="text" name="content">
                     <input type="hidden" name="post" value="<%=post._id%>">
                     <input type="submit" value="Add">
                  </form>
               </li>
            <%}%>
         </ul>
      </div>
      <%}%>
   </section>